<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:custom="clr-namespace:Oleo"
             mc:Ignorable="d"
             x:Class="Oleo.Views.ExampleListPage"
             Visual="Material"
             BackgroundColor= "#fafafa">

    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="30">
                <Label Text="Difuzarea a 3 uleiuri este ideală, în cazul în care folosim mai multe acestea, mirosul acestora se pierde și nu mai are efectul dorit. Less is more."
                       TextColor="{StaticResource TextColor}"
                       FontFamily="Italic"
                       FontSize="Medium"
                       Padding="10"/>
                <Frame Padding="15"
                       HasShadow="True"
                       BorderColor="{StaticResource PrimaryDarkColor}">
                    <StackLayout>
                       
                    <ListView ItemsSource="{Binding Examples}"
                          x:Name="ExamplesListView"
                          SeparatorVisibility="Default"
                          SeparatorColor="{StaticResource SecondaryDarkColor}"
                          RowHeight="125"
                          ItemSelected="ListView_ItemSelected"
                          >
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <custom:CustomViewCell SelectedItemBackgroundColor="White">
                                <ViewCell.View>
                                        <FlexLayout Direction="Row"
                                                    Wrap="Wrap"
                                                    JustifyContent="SpaceBetween"
                                                    AlignItems="Center"
                                                    Margin="10">    

                                            <Label Text="{Binding Nume}"
                                                   FontAttributes="Bold"
                                                   VerticalOptions="CenterAndExpand"
                                                   TextColor="{StaticResource SecondaryDarkColor}"
                                                   Padding="5"
                                                   FlexLayout.Basis="100%"/>
                                        
                                            <Label Text="{Binding Cant1}"
                                                   TextColor="{StaticResource SecondaryTextColor}"
                                                   FlexLayout.Basis="10%"/>
                                            
                                            <Label Text="picături"
                                                   TextColor="{StaticResource SecondaryTextColor}"
                                                   FlexLayout.Basis="25%"/>
                                            
                                            <Label Text="{Binding Ulei1}"
                                                   TextColor="{StaticResource SecondaryTextColor}"
                                                   FlexLayout.Basis="65%"/>

                                            <Label Text="{Binding Cant2}"
                                                   TextColor="{StaticResource SecondaryTextColor}"
                                                   FlexLayout.Basis="10%"/>

                                            <Label Text="picături"
                                                   TextColor="{StaticResource SecondaryTextColor}"
                                                   FlexLayout.Basis="25%"/>

                                            <Label Text="{Binding Ulei2}"
                                                   TextColor="{StaticResource SecondaryTextColor}"
                                                   FlexLayout.Basis="65%"/>

                                            <Label Text="{Binding Cant3}"
                                                   TextColor="{StaticResource SecondaryTextColor}"
                                                   FlexLayout.Basis="10%"/>

                                            <Label Text="picături"
                                                   TextColor="{StaticResource SecondaryTextColor}"
                                                   FlexLayout.Basis="25%"/>

                                            <Label Text="{Binding Ulei3}"
                                                   TextColor="{StaticResource SecondaryTextColor}"
                                                   FlexLayout.Basis="65%"/>

                                        </FlexLayout>
                                </ViewCell.View>
                            </custom:CustomViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                    </StackLayout>
                </Frame>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>